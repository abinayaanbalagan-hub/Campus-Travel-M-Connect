<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <TextView
        android:id="@+id/department_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Department"
        android:textSize="16sp"
        android:textColor="@color/red"/>

    <Spinner
        android:id="@+id/department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/department_Txt"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/degree_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/department"
        android:text="Degree"
        android:textSize="16sp"
        android:textColor="@color/red"/>

    <Spinner
        android:id="@+id/Degree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/degree_Txt"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/BatchTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Degree"
        android:layout_marginTop="10dp"
        android:text="Batch"
        android:textSize="16sp"
        android:textColor="@color/red"/>

    <LinearLayout
        android:id="@+id/Batch"
        android:layout_below="@+id/BatchTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/Batch_Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />

        <Spinner
            android:id="@+id/Batch_End"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/degree_Txt"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/Name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Batch"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textColor="@color/red"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Name_txt"
        android:hint="Enter Name"
        />

    <TextView
        android:id="@+id/Rollno_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Roll No"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:layout_below="@id/Name"/>

    <EditText
        android:id="@+id/Rollno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Rollno_txt"
        android:hint="Enter Roll No"
        />
    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Username"
        android:layout_below="@id/Rollno"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Password"
        android:layout_below="@id/editTextUsername"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/verifyotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Verify account"
        android:layout_below="@id/editTextPassword"
       />
    <LinearLayout
        android:id="@+id/Otpcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_below="@+id/verifyotp"></LinearLayout>

</RelativeLayout>